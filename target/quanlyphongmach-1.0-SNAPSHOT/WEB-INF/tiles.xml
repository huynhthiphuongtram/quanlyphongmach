    <definition name="login" extends="baseLayout">
        <put-attribute name="title" value="Trang đăng nhập"/>
        <put-attribute name="content" value="/WEB-INF/jsp/login.jsp"/>
    </definition>
    <definition name="book" extends="baseLayout">
        <put-attribute name="title" value="Trang hẹn lịch khám"/>
        <put-attribute name="content" value="/WEB-INF/jsp/book.jsp"/>
    </definition>
    <definition name="ManagementUser" extends="baseLayout">
        <put-attribute name="title" value="Trang quản lý thành viên"/>
